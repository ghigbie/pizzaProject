<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/question_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linear_layout_start"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/textMarginFragments"
                android:text="@string/question_start"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_text_pizza_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_start"
                android:hint=""/>


            <LinearLayout
                android:id="@+id/linear_layout_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/yes_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/buttonMargin"
                    android:layout_weight="1"
                    android:text="@string/yes" />

                <Button
                    android:id="@+id/no_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/buttonMargin"
                    android:layout_weight="1"
                    android:text="@string/no" />

            </LinearLayout>

            <Button
                android:id="@+id/seeListOfPizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout_start"
                android:layout_centerInParent="true"
                android:text="@string/see_list"
                />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
